{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <h2>All Faculty Degrees</h2>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                <tr class="info">
                    <th>Degree</th>
                    <th>Degree Holder</th>
                    <th>Degree Holder FID</th>
                    <th>Year Recevied</th>
                    <th>Highest Degree</th>
                </tr>
                </thead>
                {% for faculty in faculty_members %}
                    <tr>
                        <td>{{ faculty.degreeAbbreviation }}</td>
                        <td>
                            <a href="{{
                            path('faculty_show',
                                {'facultyID': faculty.facultyID}) }}">{{ [faculty.facultyFirstName, faculty.facultyLastName] | join(' ') }}</a></td>
                        <td>{{ faculty.facultyID }}</td>
                        <td>{{ faculty.degreeYear ?: 'Not Provided'}}</td>
                        <td>{{ faculty.degreeIsHighest ? 'Yes' : 'No'}}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}