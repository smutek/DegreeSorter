{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <h2>Degree Types</h2>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                <tr class="info">
                    <th>Degree ID</th>
                    <th>Degree Abbreviation</th>
                    <th>Degree Level</th>
                </tr>
                {% for degree_type in degree_types %}
                    <tr>
                        <td>{{ degree_type.id }}</td>
                        <td>{{ degree_type.degreeName }}</td>
                        <td>{{ degree_type.degreeLevel }}</td>
                    </tr>
                {% endfor %}
                </thead>
            </table>
        </div>
    </div>
{% endblock %}